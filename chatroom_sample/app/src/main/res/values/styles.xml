<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@android:color/black</item>

        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AuthTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/black</item>

        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="LauncherTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AuthTitleTextStyle">
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:fontFamily">@font/geometria_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="AuthErrorTextStyle">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/geometria_normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="TextInputBackground">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/bg_text_input_unselected</item>
    </style>

    <style name="TextInputStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/geometria_normal</item>
        <item name="android:paddingStart">@dimen/textInputHorizontalPadding</item>
        <item name="android:paddingEnd">@dimen/textInputHorizontalPadding</item>
        <item name="android:paddingTop">@dimen/textInputTopPadding</item>
        <item name="android:paddingBottom">@dimen/textInputBottomPadding</item>
        <item name="android:layout_marginStart">@dimen/textInputHorizontalMargin</item>
        <item name="android:layout_marginEnd">@dimen/textInputHorizontalMargin</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AuthTextInputStyle" parent="TextInputStyle">
        <item name="android:paddingStart">@dimen/textInputAuthHorizontalPadding</item>
        <item name="android:paddingEnd">@dimen/textInputAuthHorizontalPadding</item>
        <item name="android:paddingTop">@dimen/textInputAuthTopPadding</item>
        <item name="android:paddingBottom">@dimen/textInputAuthBottomPadding</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:fontFamily">@font/geometria_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="PositiveButton" parent="ButtonStyle">
        <item name="android:background">@drawable/bg_pos_button</item>
    </style>

    <style name="NegativeButton" parent="ButtonStyle">
        <item name="android:background">@drawable/bg_neg_button</item>
    </style>

    <style name="RegularTextStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">#ff3a3a3a</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/geometria_normal</item>
    </style>

    <style name="HelpTextStyle" parent="RegularTextStyle">
        <item name="android:fontFamily">@font/geometria_medium</item>
        <item name="android:textColor">@color/colorPositive</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>


    <style name="LoaderDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/colorWhite96Opacity</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CircularProgressYellow" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorLoader</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateTint">@color/colorLoader</item>
    </style>

    <style name="TitleStyle">
        <item name="android:fontFamily">@font/geometria_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorWhite96Opacity</item>
    </style>


    <style name="FilterDetailsTextStyle">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:fontFamily">@font/geometria_normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="FilterItemDetailsTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack30Opacity</item>
        <item name="android:fontFamily">@font/geometria_normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ErrorStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/geometria_normal</item>
        <item name="android:textColor">@color/colorError</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FilterDetailsLayoutStyle">
        <item name="android:paddingStart">17dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BorderlessButton" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/geometria_medium</item>
    </style>

    <style name="Snackbar.Title" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/geometria_medium</item>
    </style>


    <style name="ConnectionError.Progress" parent="@android:style/Widget.ProgressBar">
        <item name="android:colorAccent">@android:color/white</item>
    </style>


    <style name="LabelStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:paddingStart">5dp</item>
        <item name="android:fontFamily">@font/geometria_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InputStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/geometria_normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
